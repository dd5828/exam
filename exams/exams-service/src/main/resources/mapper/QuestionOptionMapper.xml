<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.examsservice.mapper.QuestionOptionMapper">


    <insert id="insertBatch">
        insert into question_options (question_id,option_content,is_correct) values
        <foreach collection="options" item="option" separator=",">
            (#{option.questionId}, #{option.optionContent}, #{option.isCorrect})
        </foreach>
    </insert>
    <select id="getByIdList" resultType="com.exam.entity.QuestionOptions" parameterType="long">
        select * from question_options
        where question_id=#{id}
    </select>
</mapper>
